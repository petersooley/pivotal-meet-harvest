{
	"name": "Pivotal Meet Harvest",
	"version": "1",
	"manifest_version": 2,
	"description": "This extension adds harvest timers to pivotal stories.",
	"content_scripts": [
		{
			"matches": ["https://www.pivotaltracker.com/*"],
			"css": ["css/pivotal.css"],
			"js": ["lib/jquery.js", "js/timers.js"]
		}
	],
	"options_page": "html/options.html",
	"permissions": [
		"https://www.pivotaltracker.com/",
		"https://*.harvestapp.com/"
	],
	"background": {
		"scripts": ["lib/jquery.js","lib/base64.js","js/background.js"]
	}
}